<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:rotationX="0"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.112" />

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="630dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bth_Expression"
                style="@style/my_style_expression"
                android:text="Expression" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bth_Result"
                style="@style/my_style_result"
                android:text="Result" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bth_ac"
                style="@style/my_style_a"
                android:text="AC" />

            <TextView
                android:id="@+id/bth_open"
                style="@style/my_style_a"
                android:text="(" />

            <TextView
                android:id="@+id/bth_Close"
                style="@style/my_style_a"
                android:text=")" />

            <TextView
                android:id="@+id/bth_div"
                style="@style/my_style_a"
                android:text=":" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bth_seven"
                style="@style/my_style_n"
                android:text="7" />

            <TextView
                android:id="@+id/bth_eight"
                style="@style/my_style_n"
                android:text="8" />

            <TextView
                android:id="@+id/bth_nine"
                style="@style/my_style_n"
                android:text="9" />

            <TextView
                android:id="@+id/bth_multi"
                style="@style/my_style_a"
                android:text="x" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bth_four"
                style="@style/my_style_n"
                android:text="4" />

            <TextView
                android:id="@+id/bth_five"
                style="@style/my_style_n"
                android:text="5" />

            <TextView
                android:id="@+id/bth_six"
                style="@style/my_style_n"
                android:text="6" />

            <TextView
                android:id="@+id/bth_minus"
                style="@style/my_style_a"
                android:text="-" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bth_one"
                style="@style/my_style_n"
                android:text="1" />

            <TextView
                android:id="@+id/bth_two"
                style="@style/my_style_n"
                android:text="2" />

            <TextView
                android:id="@+id/bth_three"
                style="@style/my_style_n"
                android:text="3" />

            <TextView
                android:id="@+id/bth_plus"
                style="@style/my_style_a"
                android:text="+" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bth_point"
                style="@style/my_style_n"
                android:text="." />

            <TextView
                android:id="@+id/bth_zero"
                style="@style/my_style_n"
                android:text="0" />

            <TextView
                android:id="@+id/bth_back"
                style="@style/my_style_a"
                android:text="back" />

            <TextView
                android:id="@+id/bth_equals"
                style="@style/my_style_a"
                android:text="=" />

        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>